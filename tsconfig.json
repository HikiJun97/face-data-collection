{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["DOM", "ES2019", "DOM.Iterable"],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["templates/*"],
  "exclude": ["node_modules", "dist"]
}
